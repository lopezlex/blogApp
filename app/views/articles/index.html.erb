<div class="row mb-3">
  <div class="col">
    <h1>Articles</h1>
    Our blog has <%= Article.public_count %> articles and counting!
  </div>
  <div class="col">
    <%= link_to "New Article", new_article_path, class: "btn btn-primary float-right" %>
  </div>
</div>
<div class="row">
  <% @articles.each do |article|%>
      <% unless article.archived? %>
        <div class="col-sm-4">
          <div class="card mb-3">
            <div class="card-body">
              <h4 class="card-title text-dark"><%= article.title %></h4>
              <p class="card-text text-muted"><%=truncate(article.body, length: 35, separator: ' ') %></p>
              <%= link_to "Learn more",article, class: "btn btn-outline-secondary"%>
            </div>
          </div>
        </div>
    <% end %>
  <% end %>
  
</div>

